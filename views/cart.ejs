<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Your Cart</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <main class="card cart">
        <h1>Your Cart</h1>

        <% if (flash) { %>
            <div class="alert <%= flash.type %>">
                <%= flash.message %>
            </div>
            <% } %>

                <% if (items.length===0) { %>
                    <p class="empty-cart">Your cart is empty.</p>
                    <% } else { %>

                        <div class="cart-list">
                            <% items.forEach(item=> { %>
                                <div class="cart-item">
                                    <div class="cart-info">
                                        <strong class="title">
                                            <%= item.title %>
                                        </strong>
                                        <span class="isbn">ISBN: <%= item.isbn %></span>
                                        <span>Qty: <%= item.qty %></span>
                                        <span>Price: <%= item.price %> SEK</span>
                                    </div>

                                    <div class="cart-right">
                                        <div class="item-total">
                                            <%= item.total %> SEK
                                        </div>

                                        <form method="POST" action="/cart/remove">
                                            <input type="hidden" name="isbn" value="<%= item.isbn %>">
                                            <button class="btn-outline small">Remove</button>
                                        </form>
                                    </div>
                                </div>
                                <% }) %>
                        </div>

                        <div class="cart-summary">
                            <div class="sum-row">
                                <span>Total</span>
                                <strong>
                                    <%= totalSum %> SEK
                                </strong>
                            </div>

                            <form method="POST" action="/checkout">
                                <button class="btn checkout-btn full">Checkout</button>
                            </form>
                        </div>

                        <% } %>

                            <p class="text-small"><a href="/books">‚Üê Continue shopping</a></p>
    </main>
</body>

</html>